@using HolidayWebChat.DataAccess
@model ChatBotModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">We're on our 'OLIDAYS'</h1>
    <form method="post" asp-controller="Home" asp-action="QuestionOneSubmit">
        <h3 class="h3">Which continent you finna go to?</h3>
        <div class="text-center">
            @Html.TextBoxFor(m => m.Continent)
        </div>
        <br />
        <input type="submit" value="Take Me There">
    </form>
</div>
